<%= render 'navbar' %>

<div class="container">
  <div class="row">
    <h1>All our Flats</h1>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class='col-4'>
        <div class='flat-card'>
          <div class='flat-card-image'>
            <img src="https://loremflickr.com/350/180/apartment,nice?lock= <%= rand(30)%>" alt="">
          </div>
          <div class='flat-card-content'>
            <h4> <%= flat.name %></h4>
            <h5><%= flat.address %></h5>
            <div class='flat-card-icons'>
              <p><i class="fas fa-users"></i><%= flat.number_of_guests %></p>
              <p><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
            </div>
          </div>
          <div class='flat-card-actions'>
            <div class='action'><%= link_to "More info", flat_path(flat)%></div>
            <div class='action'><%= link_to "Edit", edit_flat_path(flat)%></div>
            <div class='action'><%= link_to "Remove", flat_path(flat),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              remote: true %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

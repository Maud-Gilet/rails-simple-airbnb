<%= render 'navbar' %>

<div class='show-banner'>

</div>

<div class='container show-container'>

  <div class="show-grid">
    <div class="card title-section">
      <div>
        <h1><%= @flat.name %></h1>
        <h3><%= @flat.address %></h3>
      </div>
    </div>
    <div class="card description-section">
      <h3>A bit more about this flat</h3>
      <p><%= @flat.description %></p>
    </div>
    <div class="card booking-section">
      <div class="booking-title">Book this flat</div>
      <div><form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
    </div>
     <div class="card details-section">
      <h4>Details</h4>
      <div class='details-icons'>
        <p><i class="fas fa-users"></i><%= @flat.number_of_guests %></p>
        <p><i class="fas fa-euro-sign"></i><%= @flat.price_per_night %></p>
      </div>
    </div>
     <div class="card share-section">
      <h4>Share<h4>
      <div class='share-icons'>
         <i class="fab fa-facebook"></i>
         <i class="fab fa-twitter"></i>
         <i class="fab fa-pinterest"></i>
       </div>
    </div>
    <!-- etc ...-->
  </div>
</div>

 <%= simple_form_for [flat] do |f| %>
    <%= f.input :name %>
    <%= f.input :address%>
    <%= f.input :description %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.input :image %>
    <%= f.submit class: "btn btn-primary" %>
    <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-warning' %>
  <% end %>
